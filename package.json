{
  "type": "module",
  "scripts": {
    "gcp:login": "docker compose run --rm gcloud 'gcloud auth login'",
    "gcp:login-app": "docker compose run --rm gcloud 'gcloud auth application-default login'",
    "tf:init": "docker compose run --rm terraform init",
    "tf:plan": "docker compose run --rm terraform plan",
    "tf:apply": "docker compose run --rm terraform apply -auto-approve",
    "tf:destroy": "docker compose run --rm terraform destroy -auto-approve",
    "tf:ssh": "node scripts/run-instance-action.js ssh",
    "tf:stop": "node scripts/run-instance-action.js stop",
    "tf:start": "node scripts/run-instance-action.js start",
    "tf:resume": "node scripts/run-instance-action.js resume",
    "tf:suspend": "node scripts/run-instance-action.js suspend"
  }
}
